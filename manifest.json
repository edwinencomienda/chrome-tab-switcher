{
  "manifest_version": 3,
  "name": "Tab Window Switcher",
  "version": "1.0",
  "description": "Switch tabs and windows with customizable keyboard shortcut",
  "permissions": ["tabs", "windows", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Tab Switcher",
    "default_icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-last-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Tab",
        "mac": "Command+Shift+Tab"
      },
      "description": "Toggle between current tab and last active tab"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}